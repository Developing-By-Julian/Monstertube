<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Servers</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Servers you can manage</h1>
        <div class="list-group">
            <% guilds.forEach(guild => { %>
                <a href="/manage/<%= guild.id %>" class="list-group-item list-group-item-action">
                    <img src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.png" alt="<%= guild.name %> icon" class="me-3" style="width: 32px; height: 32px;">
                    <%= guild.name %>
                </a>
            <% }); %>
        </div>
    </div>
</body>
</html>
